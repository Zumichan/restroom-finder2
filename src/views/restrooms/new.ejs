<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>New Restroom Information</h1>

      <form action="/restrooms/create" method="post">
        <div class="form-group">
          <label for="title">Location Name</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Location Name">
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <textarea rows="2" class="form-control" name="address" placeholder="Enter address"></textarea>
        </div>
        <div class="form-group">
          <label for="title">Gender:</label>
          <input type="checkbox" name="male" value="Male" onclick="printChecked(this)"> Male
          <input type="checkbox" name="female" value="Female" onclick="printChecked(this)"> Female
          <input type="checkbox" name="allgender" value="All Gender" onclick="printChecked(this)"> All Gender
        </div>
        <div class="form-group">
          <label for="title">Accessibility:</label>
          <input type="checkbox" name="accessibility" value="Wheelchair" onclick="printChecked(this)"> Wheelchair
        </div>
        <div class="form-group">
          <label for="title">Facility:</label>
          <input type="checkbox" name="facility" value="Diaper Changing Table" onclick="printChecked(this)"> Diaper Changing Table
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </main>

    <% include ../static/partials/baseScripts.ejs %>
    <script>
      function printChecked(cb){
        return cb.checked;
      }
    </script>

  </body>
</html>
