<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= restroom.title %></h1>
      <p>Address: <%= restroom.address %></p>
      <p>Gender:
        <% if(restroom.men) { %>
          <span class="flaticon-man-1"></span>
          <%= restroom.men %>
        <% } %>
        <% if(restroom.women) { %>
          <span class="flaticon-woman"></span>
          <%= restroom.women %>
        <% } %>
        <% if(restroom.allgender) { %>
          <span class="flaticon-man"></span>
          <%= restroom.allgender %>
        <% } %>
      </p>
      <p>Accessibility:
        <% if(restroom.accessibility) { %>
          <span class="flaticon-wheelchair"></span>
          <%= restroom.accessibility %>
        <% } %>
      </p>
      <p>Facility:
        <% if(restroom.facility) { %>
          <span class="flaticon-child"></span>
          <%= restroom.facility %>
        <% } %>
      </p>

      <% if(currentUser && currentUser.isAdmin()) { %>
      <a href="/restrooms/<%= restroom.id %>/edit" class="btn btn-warning">Edit</a>
      <form style="display:initial" action="/restrooms/<%= restroom.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      <% } %>

      <a href="/restrooms" class="btn btn-info">Back to Nearby Public Restrooms</a>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

    <footer class="page-footer font-small blue pt-4">
      <div class="footer-copyright text-center py-3">Â© 2018 Restroom Finder
      <a href="https://www.flaticon.com">flaticon.com</a>. <p>Under <a href="http://creativecommons.org/licenses/by/3.0/">CC</a>: <a data-file="002-man" href="https://www.flaticon.com/authors/ocha">OCHA</a>, <a data-file="005-wheelchair" href="http://www.freepik.com">Freepik</a></p>
      </div>
    </footer>

  </body>
</html>
